" Only way to set these variables without requiring a special dir:
" TagWrench and this plugin in general are quite amazing.
" apostrophe has odd behavior when inserting a method call here (|)
" autocmd FileType javascript let g:pairtools_javascript_tagwrench = 1
autocmd FileType javascript let g:pairtools_javascript_tagwrenchhook = 'tagwrench#BuiltinHTML5Hook'
autocmd FileType javascript let g:pairtools_javascript_twexpander = 1
autocmd FileType javascript let g:pairtools_javascript_tweraser   = 1
autocmd FileType javascript let g:pairtools_javascript_tagwrench = 1
autocmd FileType javascript let g:pairtools_javascript_apostrophe = 0
autocmd FileType javascript let g:pairtools_javascript_jigsaw    = 1

" OCaml
autocmd FileType ocaml let g:pairtools_ocaml_pairclamp = 1
autocmd FileType ocaml let g:pairtools_ocaml_tagwrench = 0
autocmd FileType ocaml let g:pairtools_ocaml_jigsaw    = 1
autocmd FileType ocaml let g:pairtools_ocaml_autoclose  = 1
autocmd FileType ocaml let g:pairtools_ocaml_forcepairs = 0
autocmd FileType ocaml let g:pairtools_ocaml_closepairs = "(:),[:],{:},':'" . ',":"'
autocmd FileType ocaml let g:pairtools_ocaml_smartclose = 1
autocmd FileType ocaml let g:pairtools_ocaml_smartcloserules = '\w,(,&,\*'
autocmd FileType ocaml let g:pairtools_ocaml_antimagic  = 1
autocmd FileType ocaml let g:pairtools_ocaml_antimagicfield  = "Comment,String,Special"
autocmd FileType ocaml let g:pairtools_ocaml_pcexpander = 1
autocmd FileType ocaml let g:pairtools_ocaml_pceraser   = 1
autocmd FileType ocaml let g:pairtools_ocaml_tagwrenchhook = 'tagwrench#BuiltinNoHook'
autocmd FileType ocaml let g:pairtools_ocaml_twexpander = 0
autocmd FileType ocaml let g:pairtools_ocaml_tweraser   = 0
autocmd FileType ocaml let g:pairtools_ocaml_apostrophe = 0


" Configure objective-c (add your language settings here too).
" Some of this is enabled in js by default
autocmd FileType objc let g:pairtools_objc_pairclamp = 1
autocmd FileType objc let g:pairtools_objc_tagwrench = 0
autocmd FileType objc let g:pairtools_objc_jigsaw    = 1
autocmd FileType objc let g:pairtools_objc_autoclose  = 1
autocmd FileType objc let g:pairtools_objc_forcepairs = 0
autocmd FileType objc let g:pairtools_objc_closepairs = "(:),[:],{:},':'" . ',":"'
autocmd FileType objc let g:pairtools_objc_smartclose = 1
autocmd FileType objc let g:pairtools_objc_smartcloserules = '\w,(,&,\*'
autocmd FileType objc let g:pairtools_objc_antimagic  = 1
autocmd FileType objc let g:pairtools_objc_antimagicfield  = "Comment,String,Special"
autocmd FileType objc let g:pairtools_objc_pcexpander = 1
autocmd FileType objc let g:pairtools_objc_pceraser   = 1
autocmd FileType objc let g:pairtools_objc_tagwrenchhook = 'tagwrench#BuiltinNoHook'
autocmd FileType objc let g:pairtools_objc_twexpander = 0
autocmd FileType objc let g:pairtools_objc_tweraser   = 0
autocmd FileType objc let g:pairtools_objc_apostrophe = 0

" Should be the exact same as the objc settings (but we often default OBJC files
" to objcpp
autocmd FileType objcpp let g:pairtools_objcpp_pairclamp = 1
autocmd FileType objcpp let g:pairtools_objcpp_tagwrench = 0
autocmd FileType objcpp let g:pairtools_objcpp_jigsaw    = 1
autocmd FileType objcpp let g:pairtools_objcpp_autoclose  = 1
autocmd FileType objcpp let g:pairtools_objcpp_forcepairs = 0
autocmd FileType objcpp let g:pairtools_objcpp_closepairs = "(:),[:],{:},':'" . ',":"'
autocmd FileType objcpp let g:pairtools_objcpp_smartclose = 1
autocmd FileType objcpp let g:pairtools_objcpp_smartcloserules = '\w,(,&,\*'
autocmd FileType objcpp let g:pairtools_objcpp_antimagic  = 1
autocmd FileType objcpp let g:pairtools_objcpp_antimagicfield  = "Comment,String,Special"
autocmd FileType objcpp let g:pairtools_objcpp_pcexpander = 1
autocmd FileType objcpp let g:pairtools_objcpp_pceraser   = 1
autocmd FileType objcpp let g:pairtools_objcpp_tagwrenchhook = 'tagwrench#BuiltinNoHook'
autocmd FileType objcpp let g:pairtools_objcpp_twexpander = 0
autocmd FileType objcpp let g:pairtools_objcpp_tweraser   = 0
autocmd FileType objcpp let g:pairtools_objcpp_apostrophe = 0
